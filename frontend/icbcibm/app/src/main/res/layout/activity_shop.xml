<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windows.myapplication.ShopDetailActivity"
    android:orientation="vertical"
    android:background="#FfFfFf">
    <RelativeLayout
        android:id="@+id/backgroun"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/headcover"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/shop_cover_detail"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_title_detail"
        android:text="麦当劳（江安川大店）"
        android:layout_below="@+id/shop_cover_detail"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#444444"/>
    <ImageView
        android:id="@+id/mid_line"
        android:layout_width="match_parent"
        android:layout_below="@id/sub_title"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_marginTop="3sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_title"
        android:orientation="horizontal"
        android:layout_below="@id/shop_title_detail"
        android:gravity="center">
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/shop_score_detail"
         android:text="评分: 4.9"
            android:textSize="10sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_opentime_detail"
            android:text="营业时间：9:00-22:00"
            android:layout_toRightOf="@id/shop_score_detail"
            android:layout_marginLeft="15sp"
            android:textSize="10sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_type_detail"
            android:text="类型：小食饮品"
            android:layout_toRightOf="@id/shop_opentime_detail"
            android:layout_marginLeft="15sp"
            android:textSize="10sp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_title"
        android:id="@+id/sub_title_plus"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_address_detail"
            android:text="地址：四川成都市双流区西航港街道办黄河路二段"
            android:textSize="10sp"
            android:textColor="#aaa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_phone_detail"
            android:layout_toRightOf="@+id/shop_address_detail"
            android:layout_marginLeft="10sp"
            android:text="电话 4000517117"
            android:textSize="10sp"
            android:textColor="#aaa" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/rv_shop_content"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:layout_below="@+id/sub_title_plus">
        </FrameLayout>




</RelativeLayout>
