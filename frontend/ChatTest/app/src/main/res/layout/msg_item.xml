<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <!--左侧总布局-->
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <!--头像-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="left image"
                android:background="@drawable/left_head_image"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!--内容-->
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/receive">

            <TextView
                android:id="@+id/left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"/>

        </LinearLayout>
    </LinearLayout>


    <!--右侧总布局-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/right_layout">

        <!--内容-->
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/send">

            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <!--头像-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/right_head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="right image"
                android:background="@drawable/right_head_image"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>